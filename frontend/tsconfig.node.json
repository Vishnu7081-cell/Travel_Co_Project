{
  "compilerOptions": {
    "types": ["node"]
  },
  "include": [
    "vite.config.*",
    "src/**/*"
  ]
}
{
  "extends": "./tsconfig.json",
  "include": [
    "vite.config.ts",
    "vite.config.js"
  ],
  "compilerOptions": {
    "types": ["node"]
  }
}
{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.js"],
  "exclude": ["node_modules"]
}
